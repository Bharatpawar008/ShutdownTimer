<Window x:Class="ShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shutdown Timer" Height="149" Width="294">
    <Grid Height="167" Width="507">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="225*" />
        </Grid.ColumnDefinitions>
        <Label Content="Shutdown in" Grid.Column="1" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" Width="78" />
        <Label Content="minutes" Grid.Column="1" Height="28" HorizontalAlignment="Right" Margin="0,10,240,0" Name="label2" VerticalAlignment="Top" Width="73" />
        <TextBox Grid.Column="1" Height="21" HorizontalAlignment="Left" Margin="94,17,0,0" Name="minutesTextBox" VerticalAlignment="Top" Width="90" TextChanged="minutesTextBox_TextChanged" />
        <Button Content="Shutdown" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="13,65,0,0" Name="shutdownButton" VerticalAlignment="Top" Width="75" Click="shutdownButton_Click" IsEnabled="False" />
        <Button Content="Cancell Shutdown" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="94,65,0,0" Name="cancelShutdown" VerticalAlignment="Top" Width="146" Click="cancelShutdown_Click" IsEnabled="False" />
    </Grid>
</Window>
